# Per-host configurations including storage and instance settings
host_configs = {
  # Example: Basic instance with no additional volumes
  "splunk-master" = {
  },
  
  # Example: Indexer with additional EBS volumes for data storage
  "splunk-indexer1" = {
    instance_type         = "t2.large"
    root_volume_encrypted = true  # Optional: defaults to true
    additional_volumes = [
      {
        device_name = "/dev/xvdb"
        volume_size = 100
        volume_type = "gp3"
        # encrypted defaults to true
      },
      {
        device_name = "/dev/xvdc"
        volume_size = 200
        volume_type = "gp3"
      }
    ]
  },
  
  # Example: Indexer with custom root volume and one additional volume
  "splunk-indexer2" = {
    instance_type    = "t2.large"
    root_volume_size = 60
    root_volume_type = "gp3"
    additional_volumes = [
      {
        device_name = "/dev/xvdb"
        volume_size = 150
      }
    ]
    additional_tags  = {
      "Role" = "Indexer"
    }
  },
  
  # Example: Forwarder with no additional volumes
  "splunk-forwarder" = {
    instance_type    = "t2.micro"
    root_volume_size = 50
    root_volume_type = "gp3"
    additional_tags  = {
      "Role" = "Forwarder"
    }
  }
}

# AWS Region
aws_region = "eu-central-1"

# Instance configuration
instance_type = "t2.micro"
ami_id        = "ami-01a612f2c60d80101"

# Security and access
security_group_names = ["Splunk_Basic"]
key_name           = "aws_key"

# Tags to apply to all instances
tags = {
  splunkit_data_classification = "public"
  splunkit_environment_type   = "non-prd"
  "Env" = "Test"
}